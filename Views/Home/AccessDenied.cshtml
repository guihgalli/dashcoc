@{
    ViewData["Title"] = "Acesso Negado";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-shield-x text-danger" style="font-size: 4rem;"></i>
                </div>
                
                <h1 class="h3 text-danger mb-3">Acesso Negado</h1>
                
                <p class="text-muted mb-4">
                    Você não tem permissão para acessar esta página. 
                    Entre em contato com o administrador do sistema se acredita que isso é um erro.
                </p>

                <div class="card border-warning">
                    <div class="card-body">
                        <h5 class="card-title text-warning">
                            <i class="bi bi-info-circle me-2"></i>
                            Informações do seu perfil
                        </h5>
                        <p class="card-text">
                            <strong>Usuário:</strong> @Context.Session.GetString("UserName")<br>
                            <strong>E-mail:</strong> @Context.Session.GetString("Username")<br>
                            <strong>Perfil:</strong> @Context.Session.GetString("UserProfile")
                        </p>
                    </div>
                </div>

                <div class="mt-4">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary me-2">
                        <i class="bi bi-house me-2"></i>
                        Voltar ao Início
                    </a>
                    <a href="@Url.Action("Logout", "Home")" class="btn btn-outline-secondary">
                        <i class="bi bi-box-arrow-right me-2"></i>
                        Sair
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 