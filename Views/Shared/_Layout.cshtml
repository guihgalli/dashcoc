                    e.keyCode==123 || // F12
                    (e.ctrlKey && e.shiftKey && e.keyCode==73) || // Ctrl+Shift+I
                    (e.ctrlKey && e.keyCode==85) // Ctrl+U
                ){
                    e.preventDefault();
                    return false;
                }
            });
            document.addEventListener('contextmenu',function(e){e.preventDefault();});
        })();
    </script>
